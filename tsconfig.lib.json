{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "outDir": "./dist"
  },
  "include": [
    "global.d.ts",
    "src/lib/**/*",
    "components/**/*",
    "contexts/**/*",
    "hooks/**/*",
    "utils.ts",
    "types.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "packages",
    "views",
    "App.tsx",
    "index.tsx",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}